<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_light_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/gotham_regular</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="LoginInputBox" >
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:lines">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_bold_14" parent="text_bold">
        <item name="android:textSize">14sp</item>
    </style>

    <!--font gotham bold-->
    <style name="text_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_14" parent="text_normal">
        <item name="android:textSize">14sp</item>
    </style>

    <!--font gotham book-->
    <style name="text_normal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="item_func">
        <item name="android:layout_height">48dp</item>
        <item name="background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>