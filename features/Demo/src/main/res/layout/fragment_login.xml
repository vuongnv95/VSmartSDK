<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_common">

        <TextView
            android:id="@+id/titleLogin"
            style="@style/text_light_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Đăng nhập"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:text="0392368530"
            android:id="@+id/inputEmailEdt"
            style="@style/LoginInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="76dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_edit_box"
            android:hint="Số điện thoại"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/titleLogin" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputPassEdt"
            style="@style/LoginInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_edit_box"
            android:hint="Mật khẩu"
            android:text="Vht@123"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmailEdt" />

        <TextView
            android:id="@+id/forgetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:gravity="end"
            android:padding="12dp"
            android:text="@string/forget_pass"
            android:textColor="@color/color_title_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPassEdt" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Đăng nhập"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgetTv" />

        <TextView
            android:id="@+id/registerTv"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn"
            android:text="@string/register"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@color/color_title_login"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>