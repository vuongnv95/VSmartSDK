<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_common"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleLogin"
            style="@style/text_light_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Đổi mật khẩu"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputEmailEdt"
            style="@style/LoginInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="76dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_edit_box"
            android:hint="Số điện thoại"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/titleLogin" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputPassEdt"
            style="@style/LoginInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_edit_box"
            android:hint="Mật khẩu"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmailEdt" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputPasscodeEdt"
            style="@style/LoginInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_edit_box"
            android:hint="Mã code"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEmailEdt" />

        <Button
            android:id="@+id/passCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:text="Gửi mã code" />

        <Button
            android:id="@+id/fogetPassBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:text="Đổi mật khẩu" />

    </LinearLayout>
</layout>